{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        "core:default",
        "opener:default",
        "dialog:default",
        "store:default",
        "fs:default",
        "fs:read-all",
        "fs:write-all",
        "core:window:allow-set-cursor-position",
        {
            "identifier": "opener:allow-open-path",
            "allow": [
                {
                    "path": "**"
                }
            ]
        }
    ]
}
